<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class="ui huge header">Edit <%= game.title %></div>
    <form class="ui form" action="/items/<%= game._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type = "text" name="game[title]" value="<%= game.title %>">    
        </div>
        <div class="field">
            <label>Console</label>
             <input type = "text" name="game[console]" value="<%= game.console%>">
        </div>
        <div class="field">
                <label>Condition</label>
                <div class="ui selection dropdown">
                    <input type="hidden" name="game[condition]">
                    <i class="dropdown icon"></i>
                    <div class="default text"></div>
                    <div class="menu">
                      <div class="item" id="new" value="New" data-value="New">New</div>
                      <div class="item" id="used" value="Used" data-value="Used">Used</div>
                    </div>
                  </div>
            </div>
        <button type="submit" class="ui big blue basic button">Submit</button>
    </form>
</div>

    <% var item = game.condition %>
    <script> 
    debugger;
    var condition = "<%= item %>";
    $(".ui.dropdown").dropdown('set selected', condition) 
    </script>

<% include ./partials/footer %>