<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class="ui huge header">Edit <%= game.title %></div>
    <form class="ui form" action="/items/<%= game._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type = "text" name="game[title]" value="<%= game.title %>">    
        </div>
        <div class="field">
            <label>Console</label>
             <input type = "text" name="game[console]" value="<%= game.console%>">
        </div>
        <div class="field">
            <div class="ui checkbox">
              <input type="checkbox" tabindex="0" name="game[used]" value="<%= game.used %>">
              <label>Used?</label>
            </div>
        </div>
        <button type="submit" class="ui big blue basic button">Submit</button>
    </form>
</div>

<% include ./partials/footer %>