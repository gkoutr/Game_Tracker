<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class="ui huge header">New Video Game</div>
    <form class="ui form" action="/items" method="POST">
        <div class="field">
            <label>Title</label>
            <input type = "text" name="game[title]" placeholder="Title">    
        </div>
        <div class="field">
            <label>Console</label>
             <input type = "text" name="game[console]" placeholder="Console">
        </div>
        <div class="field">
            <div class="ui checkbox">
              <input type="checkbox" tabindex="0" name="game[used]">
              <label>Used?</label>
            </div>
        </div>
        <button type="submit" class="ui big blue basic button">Submit</button>
    </form>
</div>

