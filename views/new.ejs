<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class="ui huge header">New Video Game</div>
    <form class="ui form" action="/items" method="POST">
        <div class="field">
            <label>Title</label>
            <input type = "text" name="game[title]" placeholder="Title">    
        </div>
        <div class="field">
            <label>Console</label>
             <input type = "text" name="game[console]" placeholder="Console">
        </div>
        <div class="field">
            <label>Condition</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="game[condition]">
                <i class="dropdown icon"></i>
                <div class="default text">Condition</div>
                <div class="menu">
                  <div class="item" data-value="New">New</div>
                  <div class="item" data-value="Used">Used</div>
                </div>
              </div>
        </div>
        <button type="submit" class="ui big blue basic button">Submit</button>
    </form>
</div>


<script>

        $('.ui.dropdown')
            .dropdown()
        ;
</script>
<% include ./partials/footer %>