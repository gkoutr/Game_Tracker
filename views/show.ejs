<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class="ui huge header">My Games</div>
    <table class="ui celled table">
  <thead>
    <tr><th>Title</th>
    <th>Console</th>
    <th>Used?</th>
    <th>Actions</th>
  </tr></thead>
  <tbody>
      <% games.forEach(function(game){ %>
        <tr>  
             <td><%= game.title %></td>
             <td><%= game.console %> </td>
             <td><%= game.used %></td>
             <td>
                 <i class="edit icon"></i>
                 <!--<p><%= game._id %></p>-->
                 <form id="delete" action="/items/show/<%= game._id %>?_method=DELETE" method="POST">
                     <button type="submit" style="background: none; border: 0;">
                         <i class="red remove link icon" aria-hidden="true"></i>
                     </button>
                 </form>
             </td>
        </tr>
      <% }) %>
  </tbody>
</table>
</div>



<% include ./partials/footer %>